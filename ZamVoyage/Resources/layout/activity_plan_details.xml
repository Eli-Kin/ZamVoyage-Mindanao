<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlanDetailsActivity"
    android:background="@drawable/imagetest1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="4dp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Trip"
                    android:textSize="30sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/titleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="5dp"
                    android:hint="Title*"
                    android:text="Your Title"
                    android:visibility="gone" 
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/locationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:hint="From"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/locationToTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/locationToEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:hint="To"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:lines="5"
                    android:scrollbars="vertical"
                    android:inputType="textMultiLine"
                    android:scrollbarStyle="insideOverlay"
                    android:background="@drawable/edittext_border"
                    android:hint="Description"
                    android:gravity="top"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Departing Date and Time"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="25sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/selectDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/button_gradient"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:text="Select a Date"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/chooseTimeButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/button_gradient"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:text="Choose your Time"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transportation"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/transportationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"
                    android:gravity="center"/>

                <RelativeLayout
                    android:id="@+id/transportationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/transportationSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accommodation"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:textColor="#68038c"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/accomodationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:paddingRight="10dp"
                    android:gravity="center"/>

                <RelativeLayout
                    android:id="@+id/accomodationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/accomodationSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#636363"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/editSaveButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    app:backgroundTint="@null"
                    android:background="@drawable/button_gradient"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:background="@android:color/transparent"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
